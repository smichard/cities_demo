{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  // Disable Docker caching for all Docker-related lookups
  "hostRules": [
    {
      "hostType": "docker",
      "disableCache": true
    }
  ],
  "tekton": {
    "fileMatch": ["ci/custom_tasks/.+\\.yml$"]
  },
  "kubernetes": {
    "fileMatch": ["k8s/.+\\.yml$"]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [".devfile.yaml"],
      "matchStrings": [
        "image: quay\\.io/michard/devspaces_base_image:(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "quay.io/michard/devspaces_base_image",
      "datasourceTemplate": "docker"
    }
  ]
}